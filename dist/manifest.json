{
  "manifest_version": 2,
  "name": "快人一步",
  "version": "1.0.2",
  "description": "一个简洁的个人办公插件",
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "web_accessible_resources": [
    "images/icon128.png"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png"
    },
    "default_title": "快人一步",
    "default_popup": "index.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "bookmarks",
    "storage",
    "notifications",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "scripts": ["js/background.js", "js/github.js","js/bookmark.js"]
  },
  "content_scripts": [{
    "matches": ["*://*/*"],
    "js": ["js/content.js"],
    "run_at": "document_start",
    "all_frames": true
  }],
  "homepage_url": "https://github.com/lflxp/Easy-todo"
}
